@model IEnumerable<SportDay.Models.EventType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="Type" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TypeId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TypeId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TypeId })
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
@section scripts {
    <script>
        $(document).ready(function () {
            $('#Type').DataTable();
        });

    </script>
}
